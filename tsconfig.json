{
  "extends": "ts-node/node14/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "lib": ["DOM", "ES2016", "ES2020"],
    "target": "es2016",               
    "module": "commonjs",
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
