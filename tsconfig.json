{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    
    "lib": ["es2020", "dom"],
    "target": "esnext",
    "strictFunctionTypes": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "allowUmdGlobalAccess": false,
    "outDir": "build",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}